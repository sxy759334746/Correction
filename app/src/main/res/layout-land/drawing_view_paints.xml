<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    android:gravity="center"
    android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:gravity="center">

                <Button
                    android:id="@+id/doodle_paint_right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/right_solution"
                    android:textColor="@color/blue_right"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_right"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

                <Button
                    android:id="@+id/doodle_paint_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/error_solution"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>


                <Button
                    android:id="@+id/doodle_paint_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/point"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

                <Button
                    android:id="@+id/doodle_paint_error_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:layout_margin="4dp"
                    android:gravity="center"
                    android:button="@null"
                    android:text="@string/error_reason"
                    android:textColor="@color/gray_9c"
                    android:textSize="@dimen/print_button_text_size"
                    android:drawableTop="@drawable/ic_paint_unchecked"
                    android:background="@color/transparent"
                    tools:ignore="ContentDescription"/>

        </LinearLayout>

</ScrollView>